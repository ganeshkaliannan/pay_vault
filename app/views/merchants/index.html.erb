<div class="page-container">
  <div class="page-header">
    <div class="page-icon">üè¢</div>
    <div>
      <h1>Merchants</h1>
      <p>Manage merchant accounts and settings</p>
    </div>
    <div style="margin-left: auto;">
      <%= link_to "Add New Merchant", new_merchant_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="data-table">
    <div class="table-header">
      <h2>All Merchants (<%= @merchants.total_count %>)</h2>
      <div class="table-actions">
        <span class="page-info">Page <%= @merchants.current_page %> of <%= @merchants.total_pages %></span>
      </div>
    </div>
    
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Company Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Balance</th>
          <th>Status</th>
          <th>Created</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @merchants.any? %>
          <% @merchants.each do |merchant| %>
            <tr>
              <td>#<%= merchant.id %></td>
              <td><%= merchant.company_name %></td>
              <td><%= merchant.email %></td>
              <td><%= merchant.phone || 'N/A' %></td>
              <td>$<%= (merchant.balance_cents / 100.0).round(2) %></td>
              <td>
                <span class="status-badge <%= merchant.status %>">
                  <%= merchant.status.capitalize %>
                </span>
              </td>
              <td><%= merchant.created_at.strftime('%b %d, %Y') %></td>
              <td>
                <%= link_to "üí∞", add_funds_merchant_path(merchant), class: "btn-small", title: "Add Funds" %>
                <%= link_to "‚úèÔ∏è", edit_merchant_path(merchant), class: "btn-small", title: "Edit" %>
                <%= button_to "üóëÔ∏è", merchant_path(merchant), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this merchant? This action cannot be undone." }, class: "btn-small btn-danger", title: "Delete" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="8" style="text-align: center; padding: 40px;">
              <p>No merchants found</p>
              <%= link_to "Create First Merchant", new_merchant_path, class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <!-- Pagination -->
    <div class="pagination">
      <%= paginate @merchants %>
    </div>
  </div>
</div>
