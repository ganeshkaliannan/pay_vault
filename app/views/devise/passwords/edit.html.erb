<div class="login-container">
  <div class="login-header">
    <div class="login-logo">PV</div>
    <h1 class="login-title">New Password</h1>
    <p class="login-subtitle">Choose your new password</p>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :password, "New password", class: "form-label" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-input", placeholder: "Enter new password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", placeholder: "Confirm new password" %>
    </div>

    <div class="form-group">
      <%= f.submit "Change My Password", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="login-links">
    <%= link_to "Back to Login", new_session_path(resource_name) %>
  </div>
</div>
