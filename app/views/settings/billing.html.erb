<div class="settings-container">
  <div class="settings-nav">
    <h3>Categories</h3>
    <ul>
      <li><%= link_to "General", "/settings", class: "nav-link" %></li>
      <li><%= link_to "Security", "/settings/security", class: "nav-link" %></li>
      <li><%= link_to "API", "/settings/api", class: "nav-link" %></li>
      <li><%= link_to "Notifications", "/settings/notifications", class: "nav-link" %></li>
      <li class="active"><%= link_to "Billing", "/settings/billing", class: "nav-link" %></li>
    </ul>
  </div>

  <div class="settings-content">
    <div class="settings-header">
      <div class="settings-icon">ðŸ’³</div>
      <div>
        <h1>Billing Settings</h1>
        <p>Manage your plan, invoices, and payment method</p>
      </div>
    </div>

    <div class="setting-group">
      <h3>Plan</h3>
      <div class="plan-card">
        <div>
          <p class="plan-name"><%= @settings[:billing_settings][:plan] %></p>
          <p class="plan-meta">Next invoice: <%= @settings[:billing_settings][:next_invoice_date] %></p>
        </div>
        <div>
          <button class="btn btn-primary">Upgrade</button>
        </div>
      </div>
    </div>

    <div class="setting-group">
      <h3>Payment Method</h3>
      <div class="form-group">
        <label>Default card</label>
        <input type="text" class="form-input" value="Visa â€¢â€¢â€¢â€¢ <%= @settings[:billing_settings][:payment_method_last4] %>" />
      </div>
      <div class="form-group">
        <button class="btn btn-secondary">Update Payment Method</button>
      </div>
    </div>

    <div class="setting-group">
      <h3>Invoices</h3>
      <div class="data-table">
        <table>
          <thead>
            <tr>
              <th>Invoice</th>
              <th>Date</th>
              <th>Amount</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>#INV-1001</td>
              <td>2024-01-01</td>
              <td>$49.00</td>
              <td><span class="status-badge completed">Paid</span></td>
              <td><button class="btn-small">Download</button></td>
            </tr>
            <tr>
              <td>#INV-1000</td>
              <td>2023-12-01</td>
              <td>$49.00</td>
              <td><span class="status-badge completed">Paid</span></td>
              <td><button class="btn-small">Download</button></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="setting-actions">
      <button class="btn btn-primary">Save Changes</button>
      <button class="btn btn-secondary">Cancel</button>
    </div>
  </div>
</div>
